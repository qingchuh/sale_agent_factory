# AIBD-FactoryLink 环境变量配置

# 基础配置
PROJECT_NAME=AIBD-FactoryLink
VERSION=2.0.0
DEBUG=true

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost/aibd_factorylink
# 或者使用SQLite（开发环境）
# DATABASE_URL=sqlite:///./aibd_factorylink.db

# Redis配置
REDIS_URL=redis://localhost:6379/0

# OpenAI配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# 网站分析配置
WEB_SCRAPING_TIMEOUT=30
MAX_PAGES_TO_SCRAPE=20
USER_AGENT=Mozilla/5.0 (compatible; AIBD-FactoryLink/2.0)

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# LinkedIn配置
LINKEDIN_USERNAME=your-linkedin-username
LINKEDIN_PASSWORD=your-linkedin-password

# 任务队列配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/aibd_factorylink.log

# 业务配置
MAX_LEADS_PER_DAY=100
MIN_LEAD_SCORE=0.7
FOLLOW_UP_INTERVAL_DAYS=3
